<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-4.1.xsd">

    <!-- algorithm repositories -->
    <bean id="repositoryManager" class="org.n52.javaps.algorithm.RepositoryManager"/>
    <bean id="localAlgorithmRepository" class="org.n52.javaps.algorithm.LocalAlgorithmRepository" />
    <bean id="contextAlgorithmRegistrator" class="org.n52.javaps.algorithm.ContextAlgorithmRegistrator"/>
    <bean id="serviceLoaderAlgorithmRepository" class="org.n52.javaps.algorithm.ServiceLoaderAlgorithmRepository"/>

    <bean id="context" class="org.n52.javaps.utils.SpringContext"/>

    <!-- the main service components -->
    <bean id="engine" class="org.n52.javaps.EngineImpl"/>
    <bean id="inputHandlerRepository" class="org.n52.javaps.io.InputHandlerRepositoryImpl" />
    <bean id="outputHandlerRepository" class="org.n52.javaps.io.OutputHandlerRepositoryImpl" />
    <bean id="literalTypeRepository" class="org.n52.javaps.io.literal.LiteralTypeRepositoryImpl"/>
    <bean id="jobIdGenerator" class="org.n52.javaps.UUIDJobIdGenerator"/>
    <bean id="processInputDecoder" class="org.n52.javaps.ProcessInputDecoderImpl"/>
    <bean id="processOutputEncoder" class="org.n52.javaps.ProcessOutputEncoderImpl"/>

    <bean id="resultManager" class="org.n52.javaps.FileBasedResultPersistence">
        <property name="duration">
            <bean class="java.time.Duration" factory-method="parse">
                <constructor-arg value="PT2H" />
            </bean>
        </property>
        <property name="checkInterval">
            <bean class="java.time.Duration" factory-method="parse">
                <constructor-arg value="PT1H" />
            </bean>
        </property>
        <property name="basePath">
            <bean class="java.nio.file.Paths" factory-method="get">
                <constructor-arg value="/tmp/wps/outputs" />
                <constructor-arg>
                    <array value-type="java.lang.String" />
                </constructor-arg>
            </bean>
        </property>
    </bean>

    <!-- default input/output handlers for literal and bounding box data -->
    <bean id="literalInputOutputHandler" class="org.n52.javaps.io.literal.LiteralInputOutputHandler"/>
    <bean id="boundingBoxInputOutputHandler" class="org.n52.javaps.io.bbox.BoundingBoxInputOutputHandler"/>

    <!-- literal types for XML schema types -->
    <bean class="org.n52.javaps.io.literal.xsd.LiteralAnySimpleType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralAnyURIType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralBase64BinaryType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralBooleanType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralByteType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralDateTimeType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralDateType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralDayType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralDecimalType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralDoubleType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralDurationType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralFloatType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralHexBinaryType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralIntegerType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralIntType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralLanguageType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralLongType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralMonthDayType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralMonthType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralNegativeIntegerType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralNonNegativeIntegerType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralNonPositiveIntegerType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralNormalizedStringType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralPositiveIntegerType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralShortType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralStringType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralTimeType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralUnsignedByteType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralUnsignedIntType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralUnsignedLongType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralUnsignedShortType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralYearMonthType"/>
    <bean class="org.n52.javaps.io.literal.xsd.LiteralYearType"/>


    <bean class="org.springframework.context.support.ConversionServiceFactoryBean">
        <property name="converters">
            <set>
                <bean class="org.n52.iceland.config.spring.converter.PathConverter"/>
                <bean class="org.n52.iceland.config.spring.converter.DurationConverter"/>
            </set>
        </property>
    </bean>

</beans>
