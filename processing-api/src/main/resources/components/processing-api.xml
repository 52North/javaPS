<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-4.1.xsd">

    <bean id="repositoryManager" class="org.n52.javaps.algorithm.RepositoryManager">
        <constructor-arg name="updateInterval" value="1800000" />
    </bean>

    <bean id="localAlgorithmRepository" class="org.n52.javaps.algorithm.LocalAlgorithmRepository" />

    <bean id="serviceLoaderAlgorithmRepository" class="org.n52.javaps.algorithm.ServiceLoaderAlgorithmRepository"/>

    <bean id="generatorRepository" class="org.n52.javaps.io.GeneratorRepositoryImpl" />

    <bean id="parserRepository" class="org.n52.javaps.io.ParserRepositoryImpl" />

</beans>
