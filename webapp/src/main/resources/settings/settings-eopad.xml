<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="eopadSettingDefinitionGroup" class="org.n52.faroe.SettingDefinitionGroup">
        <property name="title" value="TB15 EOPAD" />
        <property name="order" value="13.0" />
    </bean>
    <bean class="org.n52.faroe.settings.StringSettingDefinition">
        <property name="key" value="docker.host" />
        <property name="title" value="Docker host" />
        <property name="description" value="Reference to the docker API host" />
        <property name="order" value="1.0" />
        <property name="group" ref="eopadSettingDefinitionGroup" />
        <property name="defaultValue" value="unix:///var/run/docker.sock" />
    </bean>
    <bean class="org.n52.faroe.settings.StringSettingDefinition">
        <property name="key" value="docker.dataDirectory" />
        <property name="title" value="Docker dataDirectory" />
        <property name="description" value="Directory to store outputs" />
        <property name="order" value="1.0" />
        <property name="group" ref="eopadSettingDefinitionGroup" />
        <property name="defaultValue" value="unix:///var/run/docker.sock" />
    </bean>
    <bean class="org.n52.faroe.settings.StringSettingDefinition">
        <property name="key" value="scihub.username" />
        <property name="title" value="Open Access Hub User" />
        <property name="description" value="Open Access Hub User" />
        <property name="order" value="20.0" />
        <property name="group" ref="eopadSettingDefinitionGroup" />
        <property name="defaultValue" value="theuser" />
    </bean>
    <bean class="org.n52.faroe.settings.StringSettingDefinition">
        <property name="key" value="scihub.password" />
        <property name="title" value="Open Access Hub Password" />
        <property name="description" value="Open Access Hub Password" />
        <property name="order" value="21.0" />
        <property name="group" ref="eopadSettingDefinitionGroup" />
        <property name="defaultValue" value="changeme" />
    </bean>
</beans>
