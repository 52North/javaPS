            <wps:BodyReference xlink:href="http://some.data.server/mygmldata.xml" />
        </wps:Reference>
    </wps:Input>


    <wps:Input id="literalInput1">
        <wps:Data>10.0</wps:Data>
    </wps:Input>

    <wps:Input id="literalInput2">
