            <wps:Data>10.0</wps:Data>
        </wps:Input>
        <wps:Input id="innerNested2">
            <wps:Data>10.0</wps:Data>
        </wps:Input>
    </wps:Input>

    <wps:Output id="output1" transmission="reference" />

